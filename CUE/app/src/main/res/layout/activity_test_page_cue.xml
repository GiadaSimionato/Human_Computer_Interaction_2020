<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context=".TestPageFragment">

    <Button
        android:id="@+id/backQuestbtn"
        style="@android:style/Widget.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/roundbtn"
        android:fontFamily="casual"
        android:onClick="goBack"
        android:text="Back"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/questTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Question 1"
        android:textColor="@color/blue"
        android:textSize="20sp"
        android:fontFamily="casual"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ansAbtn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="232dp"
        android:onClick="sendQuest"
        android:text="A"
        android:fontFamily="casual"
        android:textSize="20sp"
        android:textStyle="bold"
        android:background="@drawable/roundbtn"
        android:textColor="@color/colorWhite"
        style="@android:style/Widget.Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ansBbtn"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="74dp"
        android:background="@drawable/roundbtn"
        android:fontFamily="casual"
        android:onClick="sendQuest"
        android:text="B"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ansCbtn"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/roundbtn"
        android:fontFamily="casual"
        android:onClick="sendQuest"
        android:text="C"
        android:textSize="20sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansAbtn" />

    <Button
        android:id="@+id/ansDbtn"
        style="@android:style/Widget.Button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="264dp"
        android:background="@drawable/roundbtn"
        android:fontFamily="casual"
        android:onClick="sendQuest"
        android:text="D"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansBbtn" />

    <TextView
        android:id="@+id/txtQuestTV"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:text="Question text"
        android:textSize="18sp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questTitleTV" />

    <ProgressBar
        android:id="@+id/progressBarTest"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginEnd="171dp"
        android:layout_marginBottom="120dp"
        android:background="@android:color/transparent"
        android:progress="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.619"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/backTostartbtn"
        style="@android:style/Widget.Button"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/roundbtn"
        android:fontFamily="casual"
        android:onClick="backToStart"
        android:text="Back to start"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/showResBtn"
        android:layout_width="180sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="showResult"
        android:text="Show my Result!"
        android:textColor="@color/colorWhite"
        android:fontFamily="casual"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="@drawable/roundbtn"
        style="@android:style/Widget.Button"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ansCbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>